<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MSApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    </style>

    <style name="Theme.MSApp" parent="Base.Theme.MSApp" />

    <style name="BookingTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize the color of the action bar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    </style>


    <style name="largerText">
        <!-- Customize the color of the action bar -->
        <item name="android:fontFamily">@font/average_sans</item>
        <item name="android:textStyle">bold</item>
       <item name="android:textSize">28sp</item>
        <item name="textFillColor">@color/black</item>
    </style>
    <style name="smallText">
        <!-- Customize the color of the action bar -->
        <item name="android:fontFamily">@font/average_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textFillColor">@color/black</item>
    </style>
    <style name="bodyText">
        <!-- Customize the color of the action bar -->
        <item name="android:fontFamily">@font/average_sans</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textFillColor">@color/black</item>
    </style>

    <style name="headingText">
        <!-- Customize the color of the action bar -->
        <item name="android:fontFamily">@font/average_sans</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textFillColor">@color/black</item>
    </style>

    <style name="Theme.NavigationDrawer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/lavender</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>




</resources>